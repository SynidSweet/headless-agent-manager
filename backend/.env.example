# Database Configuration
# Choose repository type: 'memory' or 'sqlite'
REPOSITORY_TYPE=sqlite

# SQLite database path (only used when REPOSITORY_TYPE=sqlite)
# Use ':memory:' for in-memory database (not persistent)
# Use file path for persistent storage, e.g., './data/agents.db'
DATABASE_PATH=./data/agents.db

# Claude Adapter Configuration
# Choose adapter: 'python-proxy', 'sdk', or 'cli'
CLAUDE_ADAPTER=python-proxy

# Python Proxy Configuration (for python-proxy adapter)
CLAUDE_PROXY_URL=http://localhost:8000

# Claude SDK Configuration (for sdk adapter)
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# Application Configuration
NODE_ENV=development
PORT=3000
